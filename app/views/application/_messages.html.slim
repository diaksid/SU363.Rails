- unless flash.empty?
  - flash.each do |name, msg|
    .alert.alert-dismissible.mt-1.fade.show(
      role=(name.to_s == 'notice' ? 'note' : 'alert')
      class="alert-#{name.to_s == 'notice' ? 'success' : 'danger'}"
      )
      button.close(
        type='button'
        data-dismiss='alert'
        aria-label='Close'
        )
        span[aria-hidden='true'] &times;
      = msg
